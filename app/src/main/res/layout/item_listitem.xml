<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@android:color/white"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="top"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                   android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:text="Account Balance"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/material_blue_grey_800"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/banktot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/t"
                    android:layout_gravity="right|top"
                    android:text="\u20B929000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Primarydark"
                    android:textSize="20dp"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel3"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="4dp"

                    android:orientation="horizontal"
                    android:background="@color/switch_thumb_disabled_material_light"
                    android:visibility="invisible" />


                <RelativeLayout
                    android:id="@+id/nd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="4dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/bicon"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/cheese_1" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="1dp"
                        android:visibility="invisible"
                        android:layout_height="45dp"
                        android:layout_alignTop="@+id/bicon"
                        android:layout_marginRight="10dp"
                            android:layout_toEndOf="@+id/bicon"
                        android:layout_toRightOf="@+id/bicon"
                        android:background="@color/switch_thumb_disabled_material_light"
                        android:gravity="center"
                        android:orientation="vertical" />


                    <TextView
                        android:id="@+id/bname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/linearLayout"
                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/linearLayout"
                        android:layout_toRightOf="@+id/linearLayout"
                        android:text="Union Bank"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/material_blue_grey_900"
                        android:textSize="18dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/acc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/linearLayout"

                        android:layout_marginLeft="5dp"
                        android:layout_toEndOf="@+id/linearLayout"
                        android:layout_toRightOf="@+id/linearLayout"
                        android:text="A/c xxxx2592"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/primary_dark_material_light"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/bankbal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"

                        android:layout_alignTop="@+id/bname"
                        android:layout_marginRight="6dp"
                        android:text="\u20B929000"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="18dp" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>